<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <!-- View builder -->
        <service id="ekyna_commerce.common.view_builder"
                 class="Ekyna\Component\Commerce\Common\View\ViewBuilder">
            <argument type="service" id="ekyna_commerce.common.amounts_calculator"/>
        </service>

        <!-- Abstract view vars builder -->
        <service id="ekyna_commerce.abstract_view_vars_builder"
                 abstract="true">
            <call method="setUrlGenerator">
                <argument type="service" id="router"/>
            </call>
            <call method="setSubjectProviderRegistry">
                <argument type="service" id="ekyna_commerce.subject.provider_registry"/>
            </call>
        </service>

        <!-- Cart view vars builder -->
        <service id="ekyna_commerce.cart.view_vars_builder"
                 class="%ekyna_commerce.cart.view_vars_builder.class%"
                 parent="ekyna_commerce.abstract_view_vars_builder"/>

        <!-- Order view vars builder -->
        <service id="ekyna_commerce.order.view_vars_builder"
                 class="%ekyna_commerce.order.view_vars_builder.class%"
                 parent="ekyna_commerce.abstract_view_vars_builder"/>

        <!-- Quote view vars builder -->
        <service id="ekyna_commerce.quote.view_vars_builder"
                 class="%ekyna_commerce.quote.view_vars_builder.class%"
                 parent="ekyna_commerce.abstract_view_vars_builder"/>

    </services>

</container>
