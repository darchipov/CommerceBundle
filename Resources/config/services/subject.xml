<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <!-- Subject providers registry-->
        <service id="ekyna_commerce.subject.provider_registry"
                 class="Ekyna\Component\Commerce\Subject\Provider\SubjectProviderRegistry"/>

        <!-- Product form builder -->
        <service id="ekyna_commerce.product.form_builder"
                 class="Ekyna\Bundle\CommerceBundle\Service\Product\FormBuilder">
            <argument>%ekyna_commerce.product.class%</argument>
        </service>

        <!-- Product item builder -->
        <service id="ekyna_commerce.product.item_builder"
                 class="Ekyna\Bundle\CommerceBundle\Service\Product\ItemBuilder">
            <argument type="service" id="ekyna_commerce.sale_factory"/>
            <argument type="service" id="ekyna_commerce.adjustment_builder"/>
        </service>

        <!-- Product subject provider -->
        <service id="ekyna_commerce.product.subject_provider"
                 class="Ekyna\Bundle\CommerceBundle\Service\Product\ProductProvider">
            <argument type="service" id="ekyna_commerce.product.repository"/>
            <argument type="service" id="ekyna_commerce.product_stock_unit.repository"/>
            <argument type="service" id="ekyna_commerce.product.item_builder"/>
            <argument type="service" id="ekyna_commerce.product.form_builder"/>
            <tag name="ekyna_commerce.subject_provider"/>
        </service>

        <!-- Variant generator -->
        <service id="ekyna_commerce.product.variant_generator"
                 class="Ekyna\Component\Commerce\Product\Generator\VariantGenerator">
            <argument>%ekyna_commerce.product.class%</argument>
        </service>

        <!-- Simple product event handler -->
        <service id="ekyna_commerce.product.event_subscriber.simple_handler"
                 class="Ekyna\Component\Commerce\Product\EventListener\Handler\SimpleHandler"
                 public="false">
            <argument type="service" id="ekyna_resource.doctrine.orm.persistence_helper"/>
            <argument type="service" id="ekyna_resource.event_dispatcher"/>
            <argument type="service" id="ekyna_commerce.stock_subject_updater"/>
            <argument type="service" id="ekyna_commerce.product.repository"/>
            <tag name="ekyna_commerce.product_event_handler"/>
        </service>
        <!-- Variant product event handler -->
        <service id="ekyna_commerce.product.event_subscriber.variant_handler"
                 class="Ekyna\Component\Commerce\Product\EventListener\Handler\VariantHandler"
                 public="false">
            <argument type="service" id="ekyna_resource.doctrine.orm.persistence_helper"/>
            <tag name="ekyna_commerce.product_event_handler"/>
        </service>
        <!-- Variable product event handler -->
        <service id="ekyna_commerce.product.event_subscriber.variable_handler"
                 class="Ekyna\Component\Commerce\Product\EventListener\Handler\VariableHandler"
                 public="false">
            <argument type="service" id="ekyna_resource.doctrine.orm.persistence_helper"/>
            <tag name="ekyna_commerce.product_event_handler"/>
        </service>
        <!-- Bundle product event handler -->
        <service id="ekyna_commerce.product.event_subscriber.bundle_handler"
                 class="Ekyna\Component\Commerce\Product\EventListener\Handler\BundleHandler"
                 public="false">
            <argument type="service" id="ekyna_resource.doctrine.orm.persistence_helper"/>
            <argument type="service" id="ekyna_commerce.stock_subject_updater"/>
            <tag name="ekyna_commerce.product_event_handler"/>
        </service>
        <!-- Configurable product event handler -->
        <service id="ekyna_commerce.product.event_subscriber.configurable_handler"
                 class="Ekyna\Component\Commerce\Product\EventListener\Handler\ConfigurableHandler"
                 public="false">
            <tag name="ekyna_commerce.product_event_handler"/>
        </service>

        <!-- Product event handlers registry -->
        <service id="ekyna_commerce.product.event_subscriber.handler_registry"
                 class="Ekyna\Component\Commerce\Product\EventListener\Handler\HandlerRegistry"/>

        <!-- Product event listener -->
        <service id="ekyna_commerce.product.event_subscriber"
                 class="Ekyna\Component\Commerce\Bridge\Symfony\EventListener\ProductEventSubscriber">
            <argument type="service" id="ekyna_resource.doctrine.orm.persistence_helper"/>
            <argument type="service" id="ekyna_commerce.product.event_subscriber.handler_registry"/>
            <tag name="resource.event_subscriber"/>
        </service>

        <!-- Product stock unit event listener -->
        <service id="ekyna_commerce.product_stock_unit.event_subscriber"
                 class="Ekyna\Component\Commerce\Bridge\Symfony\EventListener\ProductStockUnitEventSubscriber">
            <call method="setPersistenceHelper">
                <argument type="service" id="ekyna_resource.doctrine.orm.persistence_helper"/>
            </call>
            <call method="setDispatcher">
                <argument type="service" id="ekyna_resource.event_dispatcher"/>
            </call>
            <call method="setStateResolver">
                <argument type="service" id="ekyna_commerce.stock_unit.state_resolver"/>
            </call>
            <tag name="resource.event_subscriber"/>
        </service>

    </services>

</container>
