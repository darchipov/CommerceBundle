{% extends 'EkynaCommerceBundle:Common:sale_view.html.twig' %}


{% block attributes %}
{% spaceless %}
    {% for name, value in attr %}
        {% if name == 'title' %}
            title="{{ value|trans }}"
        {% elseif name == 'confirm' %}
            data-confirm="{{ value|trans|escape }}"
        {% else %}
            {{ name }}{% if value is not same as(null) %}="{{ value }}"{% endif %}
        {% endif %}
    {% endfor %}
{% endspaceless %}
{% endblock attributes %}


{% block action %}
{% spaceless %}
    {% set attr = action.attributes %}
    <a href="{{ action.path }}" {{ block('attributes') }}>
        <i class="{{ action.icon }}"></i>
    </a>
{% endspaceless %}
{% endblock action %}


{% block button %}
{% spaceless %}
    {% set attr = button.attributes %}
    <a href="{{ button.path }}" {{ block('attributes') }}>
        <i class="{{ button.icon }}"></i> {{ button.label|trans }}
    </a>
{% endspaceless %}
{% endblock button %}


{% block lines_headers %}
{% spaceless %}
    {{ parent() }}
    <th class="sale-detail-actions"></th>
{% endspaceless %}
{% endblock lines_headers %}


{% block line_quantity %}
{% spaceless %}
    <td class="text-right">
        {% if view.vars.form[line.id] is defined %}
            {{ form_widget(view.vars.form[line.id]) }}
        {% else %}
            <span class="sale-detail-quantity">{{ line.quantity }}</span>
        {% endif %}
    </td>
{% endspaceless %}
{% endblock line_quantity %}


{% block line_leaf %}
{% spaceless %}
    {{ parent() }}
    <td class="sale-detail-actions">
    {% if line.vars.actions is defined and not line.immutable %}
        {% for action in line.vars.actions %}
            {{ block('action') }}
        {% endfor %}
    {% endif %}
    </td>
{% endspaceless %}
{% endblock line_leaf %}


{% block line_node %}
{% spaceless %}
    {{ parent() }}
    <td class="sale-detail-actions">
    {% if line.vars.actions is defined and not line.immutable %}
        {% for action in line.vars.actions %}
            {{ block('action') }}
        {% endfor %}
    {% endif %}
    </td>
{% endspaceless %}
{% endblock line_node %}


{% block gross_totals %}
{% spaceless %}
    <tbody>
    <tr>
        <th>&nbsp;</th>
        <th class="text-right" colspan="5">
            <strong>{{ 'ekyna_commerce.sale.field.gross_totals'|trans }}</strong>
        </th>
        <th class="text-right sale-detail-gross">{{ view.gross.base|localizedcurrency('EUR') }}</th>
        <th class="text-right sale-detail-gross">{{ view.gross.tax|localizedcurrency('EUR') }}</th>
        <th class="text-right sale-detail-gross">{{ view.gross.total|localizedcurrency('EUR') }}</th>
        <th>&nbsp;</th>
    </tr>
    </tbody>
{% endspaceless %}
{% endblock gross_totals %}


{% block discount %}
{% spaceless %}
    {{ parent() }}
    <td class="sale-detail-actions">
    {% if discount.vars.actions is defined and not discount.immutable %}
        {% for action in discount.vars.actions %}
            {{ block('action') }}
        {% endfor %}
    {% endif %}
    </td>
{% endspaceless %}
{% endblock discount %}


{% block discounts %}
{% spaceless %}
    <tbody>
    {% for discount in view.discounts %}
        <tr>
            {{ block('discount') }}
        </tr>
    {% endfor %}
    </tbody>
{% endspaceless %}
{% endblock discounts %}


{% block shipment %}
{% spaceless %}
    <tbody>
    <tr>
        <td class="sale-detail-number">{#{{ view.shipment.number }}#}</td>
        <td class="sale-detail-designation">{{ view.shipment.designation }}</td>
        <td>{{ view.shipment.reference }}</td>
        <td class="text-right" colspan="3">&nbsp;</td>
        <td class="text-right">{{ view.shipment.base|localizedcurrency('EUR') }}</td>
        <td class="text-right">{{ view.shipment.taxAmount|localizedcurrency('EUR') }}</td>
        <td class="text-right">{{ view.shipment.total|localizedcurrency('EUR') }}</td>
        <td class="sale-detail-actions">
        {% if view.shipment.vars.actions is defined and not view.shipment.immutable %}
            {% for action in view.shipment.vars.actions %}
                {{ block('action') }}
            {% endfor %}
        {% endif %}
        </td>
    </tr>
    </tbody>
{% endspaceless %}
{% endblock shipment %}


{% block gran_totals %}
{% spaceless %}
    <tbody>
    <tr>
        <th colspan="6" rowspan="2" class="sale-detail-buttons">
            {{ form_widget(view.vars.form.submit) }}
        </th>
        <th>{{ 'ekyna_commerce.sale.field.net_total'|trans|upper }}</th>
        <th>{{ 'ekyna_commerce.sale.field.tax_total'|trans|upper }}</th>
        <th>{{ 'ekyna_commerce.sale.field.grand_total'|trans|upper }}</th>
        <th rowspan="2">&nbsp;</th>
    </tr>
    <tr>
        <td class="text-right sale-detail-total">{{ view.final.base|localizedcurrency('EUR') }}</td>
        <td class="text-right sale-detail-total">{{ view.final.tax|localizedcurrency('EUR') }}</td>
        <td class="text-right sale-detail-total">{{ view.final.total|localizedcurrency('EUR') }}</td>
    </tr>
    </tbody>
{% endspaceless %}
{% endblock gran_totals %}


{% block spacer %}
{% spaceless %}
    <tbody>
    <tr class="sale-detail-spacer">
        <td colspan="10">&nbsp;</td>
    </tr>
    </tbody>
{% endspaceless %}
{% endblock spacer %}


{% block sale %}
{% spaceless %}
    {{ form_start(view.vars.form, {'attr': {'class': 'sale-view'}}) }}
        <div class="table-responsive">
            <table class="table table-striped sale-detail">
                {{ block('lines') }}

                {% if view.discounts is not empty %}
                    {{ block('gross_totals') }}
                    {{ block('spacer') }}
                    {{ block('discounts') }}
                {% endif %}

                {% if view.shipment is not same as(null) %}
                    {{ block('spacer') }}
                    {{ block('shipment') }}
                {% endif %}

                {{ block('spacer') }}

                {{ block('gran_totals') }}
            </table>
        </div>
        <div class="row">
            <div class="col-sm-4">
                {% if view.taxes is not empty %}
                    {{ block('taxes') }}
                {% endif %}
            </div>
            <div class="col-sm-8 sale-detail-buttons">
                {% if view.vars.buttons is defined %}
                    {% for button in view.vars.buttons %}
                        {{ block('button') }}
                    {% endfor %}
                {% endif %}
            </div>
        </div>
        <div class="sale-detail-loading">
            <div class="sk-fading-circle">
                <div class="sk-circle-1 sk-circle"></div>
                <div class="sk-circle-2 sk-circle"></div>
                <div class="sk-circle-3 sk-circle"></div>
                <div class="sk-circle-4 sk-circle"></div>
                <div class="sk-circle-5 sk-circle"></div>
                <div class="sk-circle-6 sk-circle"></div>
                <div class="sk-circle-7 sk-circle"></div>
                <div class="sk-circle-8 sk-circle"></div>
                <div class="sk-circle-9 sk-circle"></div>
                <div class="sk-circle-10 sk-circle"></div>
                <div class="sk-circle-11 sk-circle"></div>
                <div class="sk-circle-12 sk-circle"></div>
            </div>
        </div>
    {{ form_end(view.vars.form) }}
{% endspaceless %}
{% endblock sale %}
