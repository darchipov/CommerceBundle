{% set columns_count = 9 %}

{% block lines_headers %}
{% spaceless %}
    <th class="sale-detail-number">&nbsp;</th>
    <th class="sale-detail-designation">{{ 'ekyna_core.field.designation'|trans }}</th>
    <th>{{ 'ekyna_core.field.reference'|trans }}</th>
    <th>{{ 'ekyna_commerce.sale.field.net_unit'|trans }}</th>
    <th>{{ 'ekyna_commerce.sale.field.tax_rate'|trans }}</th>
    <th>{{ 'ekyna_core.field.quantity'|trans }}</th>
    <th>{{ 'ekyna_commerce.sale.field.net_total'|trans }}</th>
    <th>{{ 'ekyna_commerce.sale.field.tax_total'|trans }}</th>
    <th>{{ 'ekyna_commerce.sale.field.grand_total'|trans }}</th>
{% endspaceless %}
{% endblock lines_headers %}


{% block line_quantity %}
{% spaceless %}
    <td class="text-right">{{ line.quantity }}</td>
{% endspaceless %}
{% endblock line_quantity %}


{% block line_tax_rates %}
{% spaceless %}
    <td class="text-right">
        {% for rate in line.taxRates -%}
            {{ rate|localizednumber }}%
            {%- if not loop.last %}, {% endif -%}
        {% else %}
            &nbsp;
        {% endfor %}
    </td>
{% endspaceless %}
{% endblock line_tax_rates %}


{% block line_leaf %}
{% spaceless %}
    <td class="text-right">{% if line.unit is not sameas(null) %}{{ line.unit|localizedcurrency('EUR') }}{% endif %}</td>
    {{ block('line_tax_rates') }}
    {{ block('line_quantity') }}
    <td class="text-right">{{ line.base|localizedcurrency('EUR') }}</td>
    <td class="text-right">{{ line.taxAmount|localizedcurrency('EUR') }}</td>
    <td class="text-right">{{ line.total|localizedcurrency('EUR') }}</td>
{% endspaceless %}
{% endblock line_leaf %}


{% block line_node %}
{% spaceless %}
    <td colspan="2">&nbsp;</td>
    {{ block('line_quantity') }}
    <td colspan="3">&nbsp;</td>
{% endspaceless %}
{% endblock line_node %}


{% block line %}
{% spaceless %}
    <tr class="level-{{ line.level }}{% if line.node %} sale-detail-node{% endif %}">
        <td class="sale-detail-number">{{ line.number }}</td>
        <td class="sale-detail-designation">
            {% if line.vars.link_path is defined %}
                <a href="{{ line.vars.link_path }}"
                    {% if line.vars.link_title is defined %} title="{{ line.vars.link_title }}"{% endif %}>
                    {{ line.designation }}
                </a>
            {% else %}
                {{ line.designation }}
            {% endif %}
        </td>
        <td>{{ line.reference }}</td>
        {% if line.node %}
            {{ block('line_node') }}
        {% else %}
            {{ block('line_leaf') }}
        {% endif %}
    </tr>
    {% set lines = line.lines %}
    {% for line in lines %}
        {{ block('line') }}
        {# TODO "line" variable has been overridden by childrens #}
    {% endfor %}
{% endspaceless %}
{% endblock line %}


{% block lines %}
{% spaceless %}
    <thead>
        <tr>
            {{ block('lines_headers') }}
        </tr>
    </thead>
    <tbody>
    {% for line in view.items %}
        {{ block('line') }}
    {% endfor %}
    </tbody>
{% endspaceless %}
{% endblock lines %}


{% block gross_totals %}
{% spaceless %}
    <tbody>
        <tr>
            <th>&nbsp;</th>
            <th class="text-right" colspan="5">
                <strong>{{ 'ekyna_commerce.sale.field.gross_totals'|trans }}</strong>
            </th>
            <td class="text-right sale-detail-gross">{{ view.gross.base|localizedcurrency('EUR') }}</td>
            <td class="text-right sale-detail-gross">{{ view.gross.tax|localizedcurrency('EUR') }}</td>
            <td class="text-right sale-detail-gross">{{ view.gross.total|localizedcurrency('EUR') }}</td>
        </tr>
    </tbody>
{% endspaceless %}
{% endblock gross_totals %}


{% block discount %}
{% spaceless %}
    <td class="sale-detail-number">{#{{ discount.number }}#}</td>
    <td class="sale-detail-designation">{{ discount.designation }}</td>
    <td>{{ discount.reference }}</td>
    <td class="text-right" colspan="3">&nbsp;</td>
    <td class="text-right">{{ discount.base|localizedcurrency('EUR') }}</td>
    <td class="text-right">{{ discount.taxAmount|localizedcurrency('EUR') }}</td>
    <td class="text-right">{{ discount.total|localizedcurrency('EUR') }}</td>
{% endspaceless %}
{% endblock discount %}


{% block discounts %}
{% spaceless %}
    <tbody>
    {% for discount in view.discounts %}
        <tr>
            {{ block('discount') }}
        </tr>
    {% endfor %}
    </tbody>
{% endspaceless %}
{% endblock discounts %}


{% block shipment %}
{% spaceless %}
    {% set line = view.shipment %}
    <tbody>
    <tr>
        <td class="sale-detail-number">{#{{ line.number }}#}</td>
        <td class="sale-detail-designation">{{ line.designation }}</td>
        <td class="text-right" colspan="2">&nbsp;</td>
        {{ block('line_tax_rates') }}
        <td class="text-right">&nbsp;</td>
        <td class="text-right">{{ line.base|localizedcurrency('EUR') }}</td>
        <td class="text-right">{{ line.taxAmount|localizedcurrency('EUR') }}</td>
        <td class="text-right">{{ line.total|localizedcurrency('EUR') }}</td>
    </tr>
    </tbody>
{% endspaceless %}
{% endblock shipment %}


{% block gran_totals %}
{% spaceless %}
    <tbody>
    <tr>
        <th colspan="6" rowspan="2">&nbsp;</th>
        <th>{{ 'ekyna_commerce.sale.field.net_total'|trans|upper }}</th>
        <th>{{ 'ekyna_commerce.sale.field.tax_total'|trans|upper }}</th>
        <th>{{ 'ekyna_commerce.sale.field.grand_total'|trans|upper }}</th>
    </tr>
    <tr>
        <td class="text-right sale-detail-total">{{ view.final.base|localizedcurrency('EUR') }}</td>
        <td class="text-right sale-detail-total">{{ view.final.tax|localizedcurrency('EUR') }}</td>
        <td class="text-right sale-detail-total"><strong>{{ view.final.total|localizedcurrency('EUR') }}</strong></td>
    </tr>
    </tbody>
{% endspaceless %}
{% endblock gran_totals %}


{% block taxes %}
{% spaceless %}
    <table class="table table-striped taxes-view">
        <thead>
        <tr>
            <th>{{ 'ekyna_commerce.sale.field.tax_name'|trans }}</th>
            <th>{{ 'ekyna_commerce.sale.field.tax_amount'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for tax in view.taxes %}
            <tr>
                <td>{{ tax.name }}</td>
                <td class="text-right">{{ tax.total|localizedcurrency('EUR') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endspaceless %}
{% endblock taxes %}


{% block spacer %}
{% spaceless %}
    <tbody>
    <tr class="sale-detail-spacer">
        <td colspan="9">&nbsp;</td>
    </tr>
    </tbody>
{% endspaceless %}
{% endblock spacer %}


{% block sale %}
{% spaceless %}
    <div class="sale-view">
        <div class="table-responsive">
            <table class="table table-striped sale-detail">
                {{ block('lines') }}

                {% if view.discounts is not empty %}
                    {{ block('gross_totals') }}
                    {{ block('spacer') }}
                    {{ block('discounts') }}
                {% endif %}

                {% if view.shipment is not same as(null) %}
                    {{ block('spacer') }}
                    {{ block('shipment') }}
                {% endif %}

                {{ block('spacer') }}

                {{ block('gran_totals') }}
            </table>
        </div>

        {% if view.taxes is not empty %}
            {{ block('taxes') }}
        {% endif %}
    </div>
{% endspaceless %}
{% endblock sale %}
