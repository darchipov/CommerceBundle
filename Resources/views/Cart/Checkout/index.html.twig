{% extends base_template %}


{% block metas %}
    {{ cms_metas() }}
{% endblock metas %}


{% block content %}
    <div class="container">
        {{ cms_title() }}
        {{ cms_content() }}
    </div>
    <div class="container cart-view">
    {% if cart_view is not same as(null) %}
        {{ render_sale_view(cart_view, 'EkynaCommerceBundle:Common:sale_view_editable.html.twig') }}
    {% else %}
        <p>Votre panier est vide.</p>
    {% endif %}
    </div>
{% endblock content %}


{% block stylesheets -%}
    {{ parent() }}
    <link href="{{ asset('bundles/ekynacommerce/css/sale-view.css') }}" type="text/css" rel="stylesheet"/>
{%- endblock stylesheets %}


{% block javascripts -%}
    {{ parent() }}
    <script type="text/javascript">require(['ekyna-commerce/sale-view']);</script>
{%- endblock javascripts %}
