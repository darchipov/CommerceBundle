<h4 class="sub-header">
    {# TODO {{ path('ekyna_order_order_admin_payment_new', {'orderId': order.id}) }}#}
    <a href="javascript: void(0)" class="btn btn-success btn-xs pull-right">
        {{ 'ekyna_commerce.payment.button.new'|trans }}
    </a>
    {{ 'ekyna_commerce.payment.label.plural'|trans }}
</h4>
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>{{ 'ekyna_core.field.method'|trans }}</th>
            <th>{{ 'ekyna_core.field.amount'|trans }}</th>
            <th>{{ 'ekyna_core.field.currency'|trans }}</th>
            <th>{{ 'ekyna_commerce.payment.field.notes'|trans }}</th>
            <th>{{ 'ekyna_core.field.status'|trans }}</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for payment in order.payments %}
            <tr data-id="{{ payment.id }}">
                <td>{{ payment.method }}</td>
                <td>{{ payment.getAmount()|localizedcurrency(payment.currency) }}</td>
                <td>{{ payment.currency }}</td>
                <td>{{ payment.notes }}</td>
                <td>{{ payment|payment_state_badge }}</td>
                <td class="actions">
                    {# TODO {{ path('ekyna_order_order_admin_payment_edit', {'orderId': order.id, 'paymentId': payment.id}) }}#}
                    <a href="javascript: void(0)" class="btn btn-warning btn-xs">
                        {{ 'ekyna_core.button.edit'|trans }}
                    </a>
                    {% if payment.state == 'new' %}
                        {# TODO {{ path('ekyna_order_order_admin_payment_remove', {'orderId': order.id, 'paymentId': payment.id}) }}#}
                        <a href="javascript: void(0)" class="btn btn-danger btn-xs">
                            {{ 'ekyna_core.button.remove'|trans }}
                        </a>
                    {% endif %}
                    {# TODO {{ render_payment_actions(payment, 'ekyna_order_order_admin_payment_transition', {'orderId': order.id, 'paymentId': payment.id}) }}#}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6" style="text-align: center">
                    <em>{{ 'ekyna_commerce.payment.alert.no_item'|trans }}</em>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
