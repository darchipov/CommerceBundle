<h4 class="sub-header">
    {# TODO {{ path('ekyna_order_order_admin_shipment_new', {'orderId': order.id}) }}#}
    <a href="javascript: void(0)" class="btn btn-success btn-xs pull-right">
        {{ 'ekyna_commerce.shipment.button.new'|trans }}
    </a>
    {{ 'ekyna_commerce.shipment.label.plural'|trans }}
</h4>
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>{{ 'ekyna_core.field.number'|trans }}</th>
            <th>{{ 'ekyna_core.field.method'|trans }}</th>
            <th>{{ 'ekyna_core.field.status'|trans }}</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for shipment in order.shipments %}
            <tr data-id="{{ shipment.id }}">
                <td>{{ shipment.number }}</td>
                <td>{{ shipment.method }}</td>
                <td>{{ shipment|shipment_state_badge }}</td>
                <td class="actions">
                    {# TODO {{ path('ekyna_order_order_admin_shipment_edit', {'orderId': order.id, 'shipmentId': shipment.id}) }}#}
                    <a href="javascript: void(0)" class="btn btn-warning btn-xs">
                        {{ 'ekyna_core.button.edit'|trans }}
                    </a>
                    {% if shipment.state == 'new' %}
                        {# TODO {{ path('ekyna_order_order_admin_shipment_remove', {'orderId': order.id, 'shipmentId': shipment.id}) }}#}
                        <a href="javascript: void(0)" class="btn btn-danger btn-xs">
                            {{ 'ekyna_core.button.remove'|trans }}
                        </a>
                    {% endif %}
                    {# TODO {{ render_shipment_actions(shipment, 'ekyna_order_order_admin_shipment_transition', {'orderId': order.id, 'shipmentId': shipment.id}) }}#}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6" style="text-align: center">
                    <em>{{ 'ekyna_commerce.shipment.alert.no_item'|trans }}</em>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
