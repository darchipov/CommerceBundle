{% extends "EkynaAdminBundle:Entity/Default:show.html.twig" %}

{% block main %}
    <div class="actions">
        {{ admin_resource_btn(shipmentZone, 'edit') }}
        {{ admin_resource_btn(shipmentZone, 'remove') }}
    </div>
    <div class="show show-with-tabs">
        <ul class="nav nav-tabs">
            <li class="active">
                <a href="#shipment-shipment-zone-general" data-toggle="tab">
                    {{ 'ekyna_core.field.general'|trans }}
                </a>
            </li>
        </ul>
        <div class="show-body">
            <div class="tab-content">
                <div class="tab-pane active" id="shipment-shipment-zone-general">
                    {{ show_row(shipmentZone.name, 'text', 'ekyna_core.field.name') }}
                    {{ show_row(shipmentZone.countries, 'entity', 'ekyna_commerce.country.label.plural') }}

                    {{ display_shipment_prices(shipmentZone) }}
                </div>
            </div>
        </div>
    </div>
{% endblock main %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">require(['bundles/ekynacommerce/js/show/shipment-prices']);</script>
{% endblock javascripts %}
