{% macro show_stock_mode(subject, options = {}) %}
{% spaceless %}
    {{ show_row(subject|stock_subject_mode_badge, 'text', 'ekyna_core.field.mode', {
        'id': 'subject_stockMode'
    }|merge(options)) }}
{% endspaceless %}
{% endmacro show_stock_mode %}


