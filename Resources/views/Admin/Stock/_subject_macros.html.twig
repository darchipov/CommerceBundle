{% macro show_stock_view(subject, prefix) %}
{% spaceless %}
    {% set prefix = prefix|default('subject') %}
    <div class="row">
        <div class="col-md-6">
            {{ _self.show_stock_mode(subject, {
                'id': prefix ~'_stockMode',
                'label_nb_col': 4,
                'widget_nb_col': 8
            }) }}
        </div>
        <div class="col-md-6">
            {{ _self.show_stock_state(subject, {
                'id': prefix ~'_stockState',
                'label_nb_col': 4,
                'widget_nb_col': 8
            }) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            {{ _self.show_in_stock(subject, {
                'id': prefix ~'_inStock',
                'label_nb_col': 4,
                'widget_nb_col': 8
            }) }}
        </div>
        <div class="col-md-6">
            {{ _self.show_ordered_stock(subject, {
                'id': prefix ~'_orderedStock',
                'label_nb_col': 4,
                'widget_nb_col': 8
            }) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            {{ _self.show_shipped_stock(subject, {
                'id': prefix ~'_shippedStock',
                'label_nb_col': 4,
                'widget_nb_col': 8
            }) }}
        </div>
        <div class="col-md-6">
            {{ _self.show_eta(subject, {
                'id': prefix ~'_estimatedDateOfArrival',
                'label_nb_col': 4,
                'widget_nb_col': 8
            }) }}
        </div>
    </div>
{% endspaceless %}
{% endmacro show_stock_view %}

