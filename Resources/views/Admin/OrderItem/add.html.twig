    <div class="form-body">
        {{ bootstrap_set_style('horizontal') }}
        {{ bootstrap_set_col_size('md') }}
        {{ form_errors(form) }}

        {{ form_widget(form) }}

        {{ form_rest(form) }}

        {#{% include 'CraueFormFlowBundle:FormFlow:buttons.html.twig' %}#}
