{% extends "EkynaAdminBundle:Entity/Default:show.html.twig" %}

{% block main %}
<div class="actions">
    {{ admin_resource_btn(taxRule, 'edit') }}
    {{ admin_resource_btn(taxRule, 'remove') }}
</div>
<div class="show show-with-tabs">
    <ul class="nav nav-tabs">
        <li class="active">
            <a href="#general" data-toggle="tab">{{ 'ekyna_core.field.general'|trans }}</a>
        </li>
    </ul>
    <div class="show-body">
        <div class="tab-content">
            <div class="tab-pane active" id="general">
                <div class="row">
                    <div class="col-md-6">
                        {{ show_row(taxRule.name, 'text', 'ekyna_core.field.name', {'label_nb_col': 4, 'widget_nb_col': 8}) }}
                    </div>
                    <div class="col-md-6">
                        {{ show_row(taxRule.priority, 'number', 'ekyna_core.field.priority', {'label_nb_col': 4, 'widget_nb_col': 8}) }}
                    </div>
                </div>
                {{ show_row(taxRule.taxGroups, 'entity', 'ekyna_commerce.tax_group.label.plural', {
                    'route': 'ekyna_commerce_tax_group_admin_show',
                    'route_params_map': {'taxGroupId': 'id'}
                }) }}
                {{ show_row(taxRule.customerGroups, 'entity', 'ekyna_commerce.customer_group.label.plural', {
                    'route': 'ekyna_commerce_customer_group_admin_show',
                    'route_params_map': {'customerGroupId': 'id'}
                }) }}
                {{ show_row(taxRule.taxes, 'entity', 'ekyna_commerce.tax.label.plural', {
                    'route': 'ekyna_commerce_tax_admin_show',
                    'route_params_map': {'taxId': 'id'}
                }) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
